{
    "project": {
        "name": "my_project",
        "version": "0.1.0",
        "description": "A Python project created from template"
    },
    "data": {
        "input_dir": "data/input",
        "output_dir": "data/output",
        "cache_dir": "data/cache",
        "use_sample_data": false,
        "random_seed": 42
    },
    "processing": {
        "num_workers": 4,
        "use_gpu": false,
        "debug_mode": false,
        "log_level": "INFO",
        "batch_size": 32,
        "timeout_seconds": 300
    },
    "output": {
        "save_results": true,
        "export_formats": ["json", "csv"],
        "create_visualizations": true,
        "results_dir": "results"
    }
}
