# Flutter Project Environment Variables
# Copy this file to .env and modify as needed for your project

# =================================================================
# Project Configuration
# =================================================================
# Project name and structure
PROJECT_NAME=Flutter App
RELATIVE_APP_PATH=../src/gui/web_app

# =================================================================
# API Keys and Endpoints
# =================================================================
# Add your API keys and service endpoints here
API_KEY=your_api_key_here
API_ENDPOINT=https://api.example.com

# =================================================================
# Flutter Configuration
# =================================================================
# Specify Flutter version or other Flutter-specific settings
FLUTTER_VERSION=3.0.0
FLUTTER_FLAVOR=
ADDITIONAL_BUILD_ARGS=

# =================================================================
# Build Configuration
# =================================================================
# Configure build options
ENABLE_WEB_BUILD=true
ENABLE_IOS_BUILD=true
ENABLE_ANDROID_BUILD=true
LOCAL_SERVER_PORT=8000

# =================================================================
# Deployment Settings
# =================================================================
# Netlify deployment settings
ENABLE_NETLIFY_DEPLOY=true
NETLIFY_SITE_ID=your-netlify-site-id
NETLIFY_AUTH_TOKEN=your-netlify-auth-token

# Firebase deployment settings
ENABLE_FIREBASE_DEPLOY=false
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_TOKEN=your-firebase-token

# =================================================================
# CI/CD Configuration
# =================================================================
# Default settings for CI/CD pipelines
DEFAULT_PLATFORM=web
DEFAULT_DEPLOY=false
DEFAULT_DEPLOY_TARGET=netlify
DEFAULT_DEPLOY_TYPE=draft
DEFAULT_ANDROID_BUILD_TYPE=apk

# =================================================================
# Testing Configuration
# =================================================================
ENABLE_UNIT_TESTS=true
ENABLE_INTEGRATION_TESTS=true
ENABLE_WIDGET_TESTS=true
TEST_COVERAGE_THRESHOLD=80

# =================================================================
# Android Specific Settings
# =================================================================
ANDROID_KEYSTORE_PATH=path/to/your/keystore.jks
ANDROID_KEYSTORE_PASSWORD=your-keystore-password
ANDROID_KEY_ALIAS=your-key-alias
ANDROID_KEY_PASSWORD=your-key-password

# =================================================================
# iOS Specific Settings
# =================================================================
IOS_PROVISIONING_PROFILE=your-provisioning-profile-name
IOS_CERTIFICATE_NAME=your-certificate-name
IOS_EXPORT_METHOD=app-store
